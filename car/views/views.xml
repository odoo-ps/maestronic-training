<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="view_car_list">
      <field name="name">car list</field>
      <field name="model">car.car</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="brand"/>
          <field name="miles"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="car_action_window">
      <field name="name">Car</field>
      <field name="res_model">car.car</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem name="Car" id="menu_root" action="car_action_window"/>

    <!-- Modifying Helpdesk Ticket View -->
    <record id="view_helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.view.form.inherit</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='email_cc']" position="after">
                <field name="additional_note" />
                <field name="car" />
            </xpath>
        </field>
    </record>
  </data>
</odoo>
